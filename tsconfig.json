{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "app/*": ["src/app/*"],
            "pages/*": ["src/pages/*"],
            "shared/*": ["src/shared/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
